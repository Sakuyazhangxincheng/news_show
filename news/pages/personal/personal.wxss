/* pages/personal/personal.wxss */
.container {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx;
}
.firstHalf {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: #a7d3e8;
  padding-top: 130rpx;
  padding-bottom: 130rpx;
  margin-top: -70rpx;
  width: 750rpx;
  border-radius: 12rpx;
  box-shadow: 0 0 10rpx rgba(0, 0, 0, 0.2);
}
.userinfo {
  justify-content: center;
  align-items: center;
  height: 70rpx;
  margin-left: 20rpx;
  color: rbg(255, 255, 255);
}

.userinfo-avatar {
  overflow: hidden;
  width: 165rpx;
  height: 165rpx;
  border-radius: 50%;
  margin-top: -60rpx;
}

.userinfo-nickname {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 108rpx;
}

.secondHalf {
  display: flex;
  justify-content: center;
  align-items: center;
}

.title {
  font-size: 42rpx;
  font-weight: bold;
  color: navy;
}

